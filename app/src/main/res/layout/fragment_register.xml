<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/content_padding">
                <TextView
                    android:id="@+id/register_incorrect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#fe4d5f"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="16dp" />
                <TextView
                    android:id="@+id/register_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/first_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="46dp"
                    app:layout_constraintTop_toBottomOf="@id/register_incorrect"/>
                <EditText
                    android:id="@+id/et_register_first_name"
                    android:layout_width="375dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="@string/first_name"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_first_name" />
                <TextView
                    android:id="@+id/tv_register_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/last_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="46dp"
                    app:layout_constraintTop_toBottomOf="@id/et_register_first_name"/>
                <EditText
                    android:id="@+id/et_register_last_name"
                    android:layout_width="375dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="@string/last_name"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_last_name" />
                <TextView
                    android:id="@+id/tv_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="46dp"
                    app:layout_constraintTop_toBottomOf="@id/et_register_last_name"/>
                <EditText
                    android:id="@+id/et_register_email"
                    android:layout_width="375dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textEmailAddress|textAutoComplete"
                    android:hint="@string/email"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_email" />
                <TextView
                    android:id="@+id/tv_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="46dp"
                    app:layout_constraintTop_toBottomOf="@id/et_register_email"/>
                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="375dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register_password" />
                <TextView
                    android:id="@+id/tv_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/repeat_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="46dp"
                    app:layout_constraintTop_toBottomOf="@id/et_register_password"/>
                <EditText
                    android:id="@+id/et_repeat_password"
                    android:layout_width="375dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="@string/repeat_password"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_repeat_password" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_repeat_password"
                    android:text="@string/register_as"/>

                <Spinner
                    android:id="@+id/spinner_roles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_category"/>

                <Button
                    android:id="@+id/btn_register_2"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="48dp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/success_light"
                    android:text="@string/sign_up"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_roles" />

                <TextView
                    android:id="@+id/tvAlready"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center_horizontal"
                    android:text="@string/already_have_an_account"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_register_2"
                    tools:layout_editor_absoluteX="14dp" />

                <Button
                    android:id="@+id/btn_sign_in_2"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/success"
                    android:textSize="18sp"
                    android:text="@string/sign_in"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAlready"
                    app:layout_constraintVertical_bias="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>